<%- include("header"); -%>
    <div class = "box">
        <% for(var i = 0; i < newItemAdded.length; i++){ %>
            <form class = "main-form" action = "/delete" method = "POST">
                <div class = "item">
                    <input type="checkbox" name = "checkbox" value = "<%= newItemAdded[i]._id %>" onChange = "this.form.submit()">
                    <p> <%= newItemAdded[i].name %></p> 
               </div>
               <input type="hidden" name = "page" value = "<%= headingTitle %>"></input>
            </form>
      
         
         <% } %> 
         <form class = "item" action = "/" method="POST" >
            <input type = "text" name="newItem" placeholder="items to be added" autocomplete="off">
            <button  type = "submit" name = "list" value = <%= headingTitle%>>+</button> 
         </form>
    </div> 

</body>
</html>